<!DOCTYPE html>
<html>
  <head>
    <title>DanceWithHobbies</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="UTF-8">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body>
    <%= ' active' if %w[new_end_user_session, new_end_user_registration].any? { |name| current_page?(send("#{name}_path")) } %>
    <header class="navbar navbar-expand-lg navbar-info">
      <div class="container">
        <p>logo</p>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expand="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      </div>
    </header>
    <main class="container">
      <div class="row flex-xl-nowrap">
        <div class="col-12 col-md-3 col-xl-2">
          <div class="search"></div>
          <nav class="collapse" id="navbarNavDropdown">
            <% if admin_signed_in? %>
              <%= link_to admin_end_users do %> <div class="nav-items">ユーザー一覧</div><% end %>
              <%= link_to admin_hobbies do %> <div class="nav-items">趣味一覧</div><% end %>
              <%= link_to admin_categories do %> <div class="nav-items">カテゴリー一覧</div><% end %>
              <%= link_to admin_inquiries do %> <div class="nav-items">お問い合せ一覧</div><% end %>
              <%= link_to destroy_admin_session do %> <div class="nav-items">ログアウト</div><% end %>
            <% elsif end_user_signed_in? %>
              <%= link_to admin_end_users do %> <div class="nav-items">ユーザー一覧</div><% end %>
            <% else %>
              <%= link_to admin_hobbies do %> <div class="nav-items">趣味一覧</div><% end %>
              <%= link_to admin_categories do %> <div class="nav-items">カテゴリー一覧</div><% end %>
            <% end %>
          </nav>
        </div>
        <div>
         <%= yield %>
        </div>
      </div>
    </main>
  </body>
</html>
