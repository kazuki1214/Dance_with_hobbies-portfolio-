<div class="container p-5 mt-5">
  <div class="mb-5 mb-5 text-center"><%= image_tag "logo.png" %>
    <h1>管理者サイト</h1>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field row justify-content-center mb-3">
      <%= f.label "メールアドレス", class:"col-3" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-5" %>
    </div>

    <div class="field row justify-content-center mb-3">
      <%= f.label "パスワード", class:"col-3" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "col-5" %>
    </div>

    <div class="actions row justify-content-center mt-5">
      <%= f.submit "ログイン", class:"btn btn-primary px-md-2 py-md-2 col-2" %>
    </div>
  <% end %>
</div>