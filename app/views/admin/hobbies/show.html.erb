<div class="main">
  <%= render "layouts/navbar" %>
  <section class="container p-5">
    <div class="row mb-4 admin-title">
      <div class="admin-title_page-title"><h4>趣味詳細</h4></div>
    </div>
    <div class="row mb-5">
      <div class="col-md-8 hobby-title">
        <%= attachment_image_tag @hobby, :hobby_image, size:"100x100", format:'jpg', class: "mr-5" %>
        <div class="w-100">
          <%= @hobby.title %>
        </div>
      </div>
    </div>
    <div class="row mb-4">
      <p class="col-md-3">category:</p>
      <div class="offset-md-1 col-md-7 d-flex flex-wrap">
        <% @hobby.categories.each do |category| %>
          <div class="p-1 mr-3 border border-dark rounded-pill"><%= category.name %></div>
        <% end %>
      </div>
    </div>
    <div class="row mb-3">
      <p class="col-md-3">introduction:</p>
      <div class="col-md-7 offset-md-1 overflow-auto">
        <%= @hobby.introduction %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3 mb-3">
        <%= link_to "一覧に戻る", admin_root_path, class:"btn btn-danger px-2 py-2 w-100" %>
      </div>
      <div class="col-md-3 offset-md-4">
        <%= link_to "編集する", edit_admin_hobby_path(@hobby), class:"btn btn-success px-2 py-2 w-100" %>
      </div>
    </div>
  </section>
</div>