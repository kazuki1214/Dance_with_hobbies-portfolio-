<div class="main">
  <%= render "layouts/navbar" %>
  <section class="container p-5">
    <div class="row mb-4 admin-title">
      <div class="admin-title_page-title"><h4>ユーザー一覧</h4></div>
    </div>
    <div class="admin-table">
      <table class="table admin-table_index-table">
        <thead class="admin-table_index-thead">
          <tr class="admin-table_index-tr">
            <th>ID</th>
            <th>name</th>
            <th>e-mail</th>
            <th>status</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |t| %>
          <tr class="admin-table_index-tr">
            <td><%= t.id %></td>
            <td>
              <%= attachment_image_tag t, :user_image, size: "100x100", format: "jpg", fallback: "no_image.jpg" %>
              <%= t.name %>
            </td>
            <td><%= t.email %></td>
            <% if t.is_deleted == false %>
              <td class="text-success">有効</td>
            <% else %>
              <td class="text-secondary">退会</td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="row justify-content-around w-100">
      <%= paginate @users %>
    </div>
  </section>
</div>