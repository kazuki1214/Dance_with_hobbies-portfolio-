<div class="container">
  <div class="row mb-4">
    <div class="col-3 admin-page-title"><h4>趣味一覧</h4></div>
    <div class="btn btn-primary px-md-2 py-md-2 ml-md-auto">趣味作成</div>
  </div>
  <div class="hobbies-table">
    <table class="table admin-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>title</th>
          <th>introduction</th>
          <th>dalete</th>
        </tr>
      </thead>
      <tbody>
        <% @hobbies.each do |t| %>
        <tr>
          <td><%= t.id %></td>
          <td>
            <%= link_to admin_hobby(t) do %>
              <%= t.title %>
            <% end %>
          </td>
          <td><%= t.introduction %></td>
          <td><%= link_to "趣味削除", admin_hobby, class:"btn btn-primary px-md-2 py-md-2", method: :delete %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>