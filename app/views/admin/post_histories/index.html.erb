<div class="container">

  <div class="row border-bottom-1 border-dark">
    <div class="col-md-6 offset-md-1">
      <p>user:</p><%= attachment_image_tag @user, :user_image, size: "300x300", fallback: "no-image.jpeg" %><%= @user.name %>
    </div>
    <div class="col-md-3 offset-md-1">
      <div class="admin-search"></div>
    </div>
  </div>

  <div class="row mb-3">
    <%= link_to "戻る", 'javascript:history.back()' %>
  </div>
  <% @user.posts.each do |post| %>
  <%= link_to admin_end_user_post_history_path(post) do %>
  <div class="mx-auto admin-post">
    <div class="row border-bottom-1 border-dark mb-2">
      <%= attachment_image_tag @user, :user_image, size: "200x200", fallback: "no_image.jpg" %><%= @user.name %>
      <div class="col-3 ml-auto">
        <%= post.created_at, strftime("%Y/%m/%d/ %H:%M") %>
        <%= post.hobby.title %>
      </div>
    </div>
    <h4 class="admin-post_title"><%= post.title %></h4>
    <%= attachment_image_tag post, :post_image_id, class: "admin-post_image" %>
    <div class="row">
      <% post.tags.each do |t| %>
        <p class="admin-post_tag">#<%= t.name %></p>
      <% end %>
    </div>
  </div>
  <% end %>
  <div class="admin-post_sub">
    <p class="admin-post_comment">コメント<%= post.comments.count %>件</p>
    <p class="admin-post_favorite">いいね❤︎<%= post.favorite_posts.count %></p>
  </div>
  <% end %>
</div>