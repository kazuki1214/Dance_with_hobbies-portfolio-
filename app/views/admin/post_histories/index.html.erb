<section class="container">
  <div class="row border-bottom-1 border-dark mb-3">
    <div class="col-md-1">
      <%= link_to "戻る", 'javascript:history.back()' %>
    </div>
    <div class="col-md-6 offset-md-1">
      <p>user:</p><%= attachment_image_tag @user, :user_image, size: "100x100", fallback: "no-image.jpeg" %><%= @user.name %>
    </div>
    <div class="col-md-3 offset-md-1">
      <div class="search"></div>
    </div>
  </div>
  <% @user.posts.each do |post| %>
  <div class="mx-auto post">
    <div class="row border-bottom-1 border-dark mb-2">
      <%= attachment_image_tag post, :user_image, size: "100x100", fallback: "no-image.jpeg" %><%= @user.name %>
      <div class="col-3 ml-auto">
        <%= post.created_at, strftime("%Y/%m/%d/ %H:%M") %>
        <%= post.hobby.name %>
      </div>
    </div>
    <h4 class="post_title"><%= t.title %></h4>
    <%= attachment_image_tag post, :post_image_id, class: "post_image" %>
    <div class="row">
      <%= post.tags do |t| %>
        <p class="post_tag">#<%= t.name %></p>
      <% end %>
    </div>
  </div>
  <div class="post_sub">
    <p class="post_comment">コメント<%= post.comments.count %>件</p>
    <p class="post_favorite">いいね♡<%= post.favorite_posts.count %></p>
  </div>
  <% end %>
</section>