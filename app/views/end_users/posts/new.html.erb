<div class="main">
  <%= render "layouts/navbar" %>
  <section class="new-post">

    <%= render 'end_users/hobbies/hobby-top', hobby: @hobby %>
    <%= form_with(model: [:end_users, @hobby, @new_post], url: confirm_hobby_posts_path(@hobby), local: true) do |f| %>
      <div class="new-post_bottom">
        <h2>新規登録</h2>
        <div class="new-post_main">

          <div class="new-post_title">
            <h4 class="new-post_label"><%= f.label :title, "題名" %></h4>
            <%= f.text_field :title, class: "new-post_title-field", placeholder:"タイトルを入力" %>
          </div>

          <div class="new-post_image">
            <div class="new-post_label">
              <%= f.attachment_field :post_image %>
            </div>
            <%= attachment_image_tag @new_post, :post_image, size: "500x300", fallback: " " ,format: "jpg", id:"post_img_prev" %>
          </div>

          <div class="new-post_tags">
            <h4 class="new-post_label"><%= f.label :name, "タグ" %></h4>
            <%= f.text_field :name, class: "new-post_tag-field", placeholder: "「,」で区切ると複数タグを登録でき、重複するタグは一つにまとまります" %>
          </div>

          <div class="new-post_body">
            <h4 class="new-post_label"><%= f.label :body, "内容" %></h4>
            <%= f.text_area :body, class: "new-post_body-field", placeholder:"投稿内容を入力" %>
          </div>
        </div>

        <div class="new-post_send">
          <%= link_to hobby_posts_path(@hobby.id) do %>
            <button class="new-post_cancel">投稿をキャンセル</button>
          <% end %>
          <%= f.submit "投稿を確認", class: "new-post_submit" %>
        </div>
      </div>
    <% end %>
  </section>
</div>

<script>
$(document).on("turbolinks:load", function(){
  function readURL(input) {
    if(input.files && input.files[0]){
      var reader = new FileReader();
      reader.onload = function (e) {
        $('#post_img_prev').attr('src', e.target.result);
      }
      reader.readAsDataURL(input.files[0]);
    }
  }
  $("#post_post_image").change(function(){
    readURL(this);
  });
});

</script>