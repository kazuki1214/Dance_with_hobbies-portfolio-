<div class="main">
  <%= render "layouts/navbar" %>
  <section class="hobbies container">
    <div class="hobbies_title">
      <h2>趣味一覧</h2>
      <div class="hobbies_search"></div>
    </div>

    <div class="hobbies_contents">
      <% @hobbies.each do |hobby| %>
        <%= link_to hobby_path(hobby) do %>
          <div class="hobbies_one">
            <%= attachment_image_tag hobby, :hobby_image, class: "hobbies_one-image", fallback: "no_image.jpg" %>
            <div class="hobbies_one-name">
              <%= hobby.title %>
            </div>
            <div class="hobbies_one-introduction">
              <%= hobby.introduction %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="hobbies_paginate">
      <%= paginate @hobbies %>
    </div>

  </section>
</div>