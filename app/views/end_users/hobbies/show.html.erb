              </div>
            </div>

            <%= link_to hobby_post_path(post) do %>
              <h4 class="hobby-one_post-title"><%= post.title %></h4>
              <div class="hobby-one_post-image">
                <%= attachment_image_tag post, :post_image, size: "500x300" %>
              </div>
              <div class="hobby-one_post-list">
                <%= post.tags do |tag| %>
                  <span><%= tag.name %></span>
                <% end %>
              </div>
            <% end %>
          </div>
          <div class="hobby-one_post-sub">
            <h6><%= image_tag "eye.jpg" %><%= post.impressions.size %></h6>
            <h6 class="hobby-one_post-comment"><%= image_tag "comment.jpg" %><%= post.post_comments.count %>‰ª∂</h6>
